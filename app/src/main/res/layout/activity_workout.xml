<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/gradient_blue"

    tools:context=".WorkoutActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active tracking has begun!"
        android:fontFamily="@font/expressway"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/expressway"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:background="@drawable/text_backgrd"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:text="Total Steps"/>

    <TextView
        android:id="@+id/tv_total_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:textSize="35dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/expressway"
        android:text="0" />



    <Chronometer
        android:id="@+id/app_chronometer"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/expressway"
        android:layout_marginBottom="20dp"/>



    <Button
        android:id="@+id/btn_end_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/expressway"
        android:layout_marginTop="20dp"
        android:paddingRight="20dp"
        android:textColor="@android:color/black"
        android:paddingLeft="20dp"
        android:background="@drawable/button_start"
        android:text="End workout" />
</LinearLayout>