<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.step.tracker.secretsteps">

    <application
        android:allowBackup="true"
        android:icon="@drawable/walk"
        android:label="@string/app_name"
        android:roundIcon="@drawable/walk"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.step.tracker.secretsteps.MainActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.step.tracker.secretsteps.HomeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.step.tracker.secretsteps.WorkoutActivity"
            android:screenOrientation="portrait"/>
        <receiver android:name="MyBroadcastReceiver"></receiver>
    </application>

</manifest>